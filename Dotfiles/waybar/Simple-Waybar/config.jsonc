[
  {
    "name": "topbar",
    "layer": "top",
    "position": "top",
    "height": 30,
    "modules-left": [
      "battery",
      "disk",
      "memory",
      "cpu",
      "temperature",
      "pulseaudio",
      "backlight",
      "idle_inhibitor"
    ],
    "modules-center": ["custom/playerctl"],
    "modules-right": [
      "network",
      "clock",
      "custom/poweroff"
    ],
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
      }
    },
    "clock": {
      "interval": 1,
      "format": "<b>{:%A, %B %d | %I:%M:%S %p}</b>",
      "format-alt": "{:%Y-%m-%d}",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
      "format": "Ôãõ {usage}%",
      "tooltip": true,
      "interval": 3
    },
    "disk": {
      "format": "ÔÇ† {}%",
      "tooltip-format": "{used} / {total} used"
    },
    "memory": {
      "format": "ÔÉâ {}%",
      "tooltip-format": "{used:0.1f}G / {total:0.1f}G used"
    },
    "temperature": {
      "interval": 2,
      "tooltip": true,
      "hwmon-path": [
        "/sys/class/hwmon/hwmon7/temp1_input",
        "/sys/class/thermal/thermal_zone0/temp"
      ],
      "critical-threshold": 82,
      "format-critical": "{icon}\u2004{temperatureC}¬∞C",
      "format": "{icon}\u2004{temperatureC}¬∞C",
      "format-icons": ["Ôãã", "Ôãä", "Ôãâ", "Ôãà", "Ôãá"]
    },
    "backlight": {
      "format": "{icon} {percent}%",
      "format-icons": [
        "Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"
      ]
    },
    "battery": {
      "bat": "BAT0",
      "adapter": "AC",
      "interval": 10,
      "full-at": 100,
      "states": {
        "full": 100,
        "good": 99,
        "empty": 5
      },
      "format": "{icon} {capacity}%",
      "format-charging": "Ôá¶ {capacity}%",
      "format-plugged": "Ôá¶ {capacity}%",
      "format-empty": "",
      "format-full": "",
      "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "custom/playerctl": {
      "format": "{}",
      "return-type": "json",
      "max-length": 30,
      "exec": "playerctl -a metadata --format '{\"text\": \"{{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
      "on-click": "playerctl play-pause",
      "on-click-right": "playerctl next",
      "on-click-middle": "playerctl previous",
      "scrolling": true,
      "scroll-step": 1.0,
      "smooth-scrolling-threshold": 1
    },
    "network": {
      "format-wifi": "Ôá´ \u2004{essid} ({signalStrength}%)",
      "interval": 15,
      "format-disconnected": "ÔÅó",
      "on-click": "nm-connection-editor"
    },
    "pulseaudio": {
      "scroll-step": 1,
      "format": "{icon} {volume}%{format_source} ",
      "format-bluetooth": "{icon}Ôäî {volume}%{format_source} ",
      "format-bluetooth-muted": "ÔÄ¶ {icon}Ôäî{format_source} ",
      "format-muted": "Óª® {format_source} ",
      "format-source": " ÔÑ∞ {volume}%",
      "format-source-muted": " ÔÑ±",
      "format-icons": {
        "headphone": "ÔÄ•",
        "phone": "ÔÇï",
        "portable": "ÔÇï",
        "car": "ÔÜπ",
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
      },
      "on-scroll-up": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 1%+ && ~/.config/waybar/Scripts/wp-vol.sh",
      "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%- && ~/.config/waybar/Scripts/wp-vol.sh"
    },
    "custom/poweroff": {
      "format": "‚èª\u200A\u200A\u200A\u200A",
      "tooltip": false,
      "menu": "on-click",
      "menu-file": "~/.config/waybar/Scripts/power_menu.xml",
      "menu-actions": {
        "shutdown": "poweroff",
        "reboot": "reboot",
        "suspend": "systemctl suspend",
        "exit-niri": "pkill niri",
        "hibernate": "systemctl hibernate"
      }
    },
    "custom/cava": {
  "exec":  "~/.config/waybar/Scripts/WaybarCava.py",
  //"interval": 0.1
  //"format": "{}"
  "on-click": "playerctl play-pause",
  "on-click-right": "playerctl next",
  "on-click-middle": "playerctl previous",
  "on-scroll-up": "wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 1%+ && ~/.config/waybar/Scripts/wp-vol.sh",
  "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%- && ~/.config/waybar/Scripts/wp-vol.sh"
},
 "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "firefox": "Ôâ©",
            "vlc": "Û∞ïº",
	        "mpv": "ÔçÆ",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/Scripts/mediaplayer.py 2> /dev/null",
        "on-click": "playerctl play-pause",
        "on-double-click": "playerctl next",
        "on-click-right": "playerctl previous"
    },
  },
  {
    "name": "bottombar",
    "layer": "top",
    "position": "bottom",
    "height": 30,
    "modules-left": ["tray"],
    "modules-center": ["wlr/taskbar"],
    "modules-right": ["niri/workspaces"],
    "tray": {
      "icon-size": 13,
      "spacing": 10
    },
    "wlr/taskbar": {
      "format": "{icon} {name}",
      "icon-size": 13,
      "tooltip": false,
      "on-click": "activate",
      "on-click-right": "close",
      "app_ids-mapping": {
        "gnome-terminal-server": "org.gnome.Terminal"
      }
    }
  }
]

